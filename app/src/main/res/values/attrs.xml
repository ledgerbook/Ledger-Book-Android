<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="customTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <attr name="typeface">
        <enum name="roboto_regular" value="0"/>
        <enum name="roboto_medium" value="1"/>
        <enum name="roboto_light" value="2"/>
    </attr>

    <declare-styleable name="CustomTextInput">
        <attr name="validatorType">
            <enum name="mandatory" value="0"/>
            <enum name="phone" value="1"/>
            <enum name="otp" value="2"/>
            <enum name="postalCode" value="3"/>
            <enum name="amount" value="4"/>
            <enum name="email" value="5"/>
        </attr>
        <attr name="mandatoryText"/>
        <attr name="inputType">
            <enum name="capParagraph" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomInputBox">
        <attr name="IbTitle" format="string"/>
    </declare-styleable>

    <declare-styleable name="fontDrawableView">
        <attr name="fontDrawable"/>
        <attr name="fontDrawableColor"/>
        <attr name="fontDrawableSize"/>
    </declare-styleable>

</resources>